@if (ViewBag.condition != null)
{
    <script type="text/javascript">
        var cond = @ViewBag.condition;
        if (cond == '1') {
            alert('Session Expired! Please Login Again!');
        }
        else if (cond == '2') {
            alert('Alert! ' + @ViewBag.exception);
        }
    </script>
}

