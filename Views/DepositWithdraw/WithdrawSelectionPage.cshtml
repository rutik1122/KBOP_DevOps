
@{
    ViewBag.Title = "TrfSelectionPage";
    Layout = "~/Views/Shared/_Layout_2.cshtml";
}

<div class="row col-12 mb-3 my-0">
    <div class="text-center">
        <h3 class="mb-0 text-primary ">
            <span class="bg-200 dark__bg-1100">Cash Withdrawal Page</span>
        </h3>
    </div>
</div>

<div class="row justify-content-center mb-3">
    @using (Html.BeginForm("WithdrawSelectionPage", "DepositWithdraw"))
    {
        <div class="row justify-content-center mb-3">
            <div class="col-xxl-4 col-lg-5 col-md-12 col-sm-12">
                <div class="card px-3 py-2">
                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <div class="col-sm-12" style="text-align: center;">
                                <label style="font-size:15px;"><b>Scanning Type</b></label>
                            </div>
                            <div class="col-sm-12" style="text-align: center;">
                                @Html.DropDownList("Scanning_Type", new List<SelectListItem>
                                {
                                   new SelectListItem{ Text = "Cash Withdrawal With Cheque", Value = "1" },
                                   new SelectListItem{ Text = "Cash Withdrawal With Withdrawal Form", Value = "2" }
                                })
                            </div>
                        </div>

                        <br />

                        <div class="form-group">
                            <div class="col-sm-12" style="text-align: center;">
                                <button class="btn btn-info" type="submit" value="submit">
                                    <i class="ace-icon fa fa-check bigger-110"></i>
                                    Submit
                                </button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>

    }
</div>


<script type="text/javascript">

    var rooturl = '@Url.Content("~/")';

    $(document).ready(function () {
        $("#ProcessingBar").hide();

        $.ajax({
            type: "POST",
            url: rooturl + "Home/ValidateSession",
            data: {},
            datatype: "json",
            success: function (data) {
                if (data == "False") {
                    window.location = rooturl + "Home/LoginiBAS?cond=1";
                }
            }
        });

    });
</script>