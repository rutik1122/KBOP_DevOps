
@{
    ViewBag.Title = "DemandDraftList";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}


<div class="main-content-inner">
    <div class="page-content">
        <div class="page-header">
            <h1>
                Demand Draft Selection Page
            </h1>
        </div>

        <div class="page-content">
            @using (Html.BeginForm("DemandDraftSelection", "DemandDraft"))
            {
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        @*<label class="col-sm-1"></label>*@
                        <label class="col-sm-2" style="font-size:15px"><b>DD Type</b></label>
                        <div class="col-sm-2">
                            @Html.DropDownList("DD_Type", new List<SelectListItem>
                            {
                                new SelectListItem{ Text = "DD with Cash", Value = "01" },
                                new SelectListItem{ Text = "DD with Cheque", Value = "02" },
                                new SelectListItem{ Text = "DD with Withdrawal Slip", Value = "03" },
                                new SelectListItem{ Text = "DD with Debit Intimation", Value = "04" }
                            })
                        </div>
                        
                    </div>

                    <br /><br />

                    <div class="form-group">
                        <div class="col-sm-11">
                            <button class="btn btn-info" type="submit" value="submit">
                                <i class="ace-icon fa fa-check bigger-110"></i>
                                Submit
                            </button>
                        </div>
                    </div>

                </form>
            }
        </div>
    </div>
    
</div>


<script type="text/javascript">

    var x = document.getElementById("urlVal").value;
    var rooturl = '@Url.Content("~/")';

    $(document).ready(function () {

        $.ajax({
            type: "POST",
            url: rooturl + "Home/ValidateSession",
            data: {},
            datatype: "json",
            success: function (data) {
                if (data == "False") {
                    window.location = rooturl + "Home/LoginiBAS?cond=1";
                }
            }
        });


    });

</script>

