    Layout = "~/Views/Shared/_Layout_2.cshtml";
}
<script src="~/Scripts/AppSecMaster.js"></script>

<input id="KVal" value="@Session["KVal"]" hidden />
<input id="uid" value="@Session["uid"]" hidden />

