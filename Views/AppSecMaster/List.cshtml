@model IEnumerable<iBAS.Models.Appsecpolicy_master>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout_2.cshtml";
}

<div class="container">

    <div class="row col-12 mb-3 mt-1">
        <form class="d-flex align-items-center" action="#">
            <div class="row">
                <h3 class="mb-0 text-primary position-relative">
                    <span class="bg-200 dark__bg-1100 pe-3">Appsecpolicy Master</span>
                </h3>
            </div>
            @*<div class="row">
                    <div class="d-grid gap-2 d-md-block">
                        <div class="btn btn-sm btn-primary ml-2">
                            <i class="fas fa-plus-circle text-white"></i>&nbsp;&nbsp;
                            @Html.ActionLink("Add Reason", "Create", "Api_Setting_MasterController", null, new { style = "color:white" })
                        </div>
                    </div>
                </div>*@
        </form>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <p class="error-message"><font color="red" size="+1">@ViewBag.ErrorMessage</font></p>
    }
    else if (Model == null)
    {
        <p><font color="red" size="+1"><strong>No Data Found!</strong></font></p>
    }
    else
    { <div id="div_rolelist" class="col">
            <div class="card overflow-hidden">
                <div class="card-body py-0">
                    <div class="table-responsive scrollbar">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Pwdexpirydays)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Minpwdlenghth)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Maxpwdlenghth)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Invalidattemtsallowed)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Deactivationdays)
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Pwdexpirydays)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Minpwdlenghth)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Maxpwdlenghth)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Invalidattemtsallowed)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Deactivationdays)
                                        </td>

                                        <td>
                                            <a href="@Url.Action("Edit","AppSecMaster",new {id = item.ID})" class="btn btn-sm btn-primary" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit">
                                                <i class="fas fa-edit text-white"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }

</div>


<script type="text/javascript">
    var rooturl = '@Url.Content("~/")';



    $(document).ready(function () {
        $("#ProcessingBar").hide();

        $.ajax({
            type: "POST",
            url: rooturl + "Home/ValidateSession",
            data: {},
            datatype: "json",
            success: function (data) {
                if (data == "False") {
                    window.location = rooturl + "Home/LoginiBAS?cond=1";
                }
            }
        });

    });

</script>
