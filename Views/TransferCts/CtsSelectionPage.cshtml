
@{
    ViewBag.Title = "CtsSelectionPage";
    Layout = "~/Views/Shared/_Layout_2.cshtml";
}

<div class="row col-12 mb-3 my-0">
    <div class="text-center">
        <h3 class="mb-0 text-primary ">
            <span class="bg-200 dark__bg-1100">CTS Selection Page</span>
        </h3>
    </div>
</div>

<div class="row justify-content-center mb-3">
    @using (Html.BeginForm("CtsSelectionPage", "TransferCts"))
    {
    <div class="row justify-content-center mb-3">
        <div class="col-xxl-4 col-lg-5 col-md-12 col-sm-12">
            <div class="card px-3 py-2">
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <div class="col-sm-12" style="text-align: center;">
                            <label style="font-size:15px;"><b>Clearing Type</b></label>
                        </div>
                        <div class="col-sm-12" style="text-align: center;">
                            @Html.DropDownList("Clearing_Type", new List<SelectListItem>
                            {
                                new SelectListItem{ Text = "01 - Regular Clearing", Value = "01" },
                                new SelectListItem{ Text = "02 - SAT Presentation", Value = "02" },
                                new SelectListItem{ Text = "07 - High Value", Value = "07" },
                                new SelectListItem{ Text = "16 - ONUS", Value = "16" },
                                new SelectListItem{ Text = "99 - Special Clearing", Value = "99" }
                            })
                        </div>
                    </div>

                    <br />

                    <div class="form-group">
                        <div class="col-sm-12" style="text-align: center;">
                            <label style="font-size:15px;"><b>Scanning Type</b></label>
                        </div>
                        <div class="col-sm-12" style="text-align: center;">
                            @Html.DropDownList("Scanning_Type", new List<SelectListItem>
                            {
                               new SelectListItem{ Text = "Retail Without Slip", Value = "2" },
                               new SelectListItem{ Text = "Retail With Slip", Value = "1" },
                               new SelectListItem{ Text = "P2F Without Slip", Value = "3" }
                            })
                        </div>
                    </div>

                    <br />

                    <div class="form-group">
                        <div class="col-sm-12" style="text-align: center;">
                            <button class="btn btn-info" type="submit" value="submit">
                                <i class="ace-icon fa fa-check bigger-110"></i>
                                Submit
                            </button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
            
    }
</div>


<script type="text/javascript">

    var rooturl = '@Url.Content("~/")';

    $(document).ready(function () {
        $("#ProcessingBar").hide();
        debugger;
        $.ajax({
            type: "POST",
            url: rooturl + "Home/ValidateSession",
            data: {},
            datatype: "json",
            success: function (data) {
                if (data == "False") {
                    window.location = rooturl + "Home/LoginiBAS?cond=1";
                }
            }
        });
    });
</script>
