@model IEnumerable<iBAS.Models.CommonSettingMaster>

@{
    ViewBag.Title = "SettingList";
    Layout = "~/Views/Shared/_Layout_2.cshtml";
}

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<div class="container">
    <div class="row col-12 mb-3 mt-1">
        <form class="d-flex align-items-center" action="#">
            <div class="row">
                <h3 class="mb-0 text-primary position-relative">
                    <span class="bg-200 dark__bg-1100 pe-3">Common Settings Master</span>
                </h3>
            </div>
        </form>
    </div>
    <div id="div_rolelist" class="col">
        <div class="card overflow-hidden">
            <div class="card-body py-0">
                <div class="table-responsive scrollbar">
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.AppName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SettingName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SettingValue)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AppName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SettingName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SettingValue)
                                </td>
                                <td>
                                    @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                                    <a href="@Url.Action("Edit","CommonSetting",new {id = item.Id})" class="btn btn-sm btn-primary">
                                        <i class="fas fa-edit text-white" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit"></i>
                                    </a>
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>

</div>


<script type="text/javascript">
    var rooturl = '@Url.Content("~/")';


    $(document).ready(function () {
        $("#ProcessingBar").hide();
        debugger;
        $.ajax({
            type: "POST",
            url: rooturl + "Home/ValidateSession",
            data: {},
            datatype: "json",
            success: function (data) {
                if (data == "False") {
                    window.location = rooturl + "Home/LoginiBAS?cond=1";
                }
            }
        });

    });

</script>
